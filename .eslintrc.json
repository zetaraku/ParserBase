{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2017
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single",
			{ "avoidEscape": true }
		],
		"semi": [
			"error",
			"always"
		]
	},
	"overrides": [
		{
			"files": ["test/**/*.test.js"],
			"env": {
				"node": true,
				"mocha": true
			},
			"rules": {

			}
		},
		{
			"files": ["webpack.config.js"],
			"env": {
				"node": true
			},
			"rules": {

			}
		}
	]
}
